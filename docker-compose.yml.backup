version: '3'
services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: fifaapp9_app
    ports:
      - "8080:80"  # ブラウザアクセス用
    volumes:
      - ./:/var/www/html
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - db

  db:
    image: mysql:5.7
    container_name: fifaapp9_db
    environment:
      MYSQL_ROOT_PASSWORD: secret
      MYSQL_DATABASE: laravel
      MYSQL_USER: laravel
      MYSQL_PASSWORD: secret
    ports:
      - "3306:3306"
    volumes:
      - dbdata:/var/lib/mysql

volumes:
  dbdata:
